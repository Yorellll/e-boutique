{% extends 'base.html.twig' %}

{% block title %}Tous les produits
{% endblock %}

{% block products %}

	<div class="container px-4 px-lg-5 mt-5">
		<h2 class="section-heading mb-2 text-center">
			<span class="section-heading-lower">Toutes nos offres</span>
		</h2>
		<p class="fw-bold mb-4 text-center">Découvrez des expériences inoubliables à travers le monde ! Parcourez notre sélection complète d'offres pour vivre des aventures uniques</p>
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			{% for product in products %}
				<div class="col mb-5">
					<div
							class="card h-100">
						{% if product.img %}
							<img class="card-img-top" src="/uploads/{{ product.img }}" width="30" height="150"/>
						{% else %}
							<img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..."/>
						{% endif %}
						<div class="card-body p-4">
							<div
									class="text-center">
								<h5 class="fw-bolder">{{ product.Name }}</h5>
								<div class="d-flex justify-content-center small text-warning mb-2">
									<div class="bi-star-fill"></div>
									<div class="bi-star-fill"></div>
									<div class="bi-star-fill"></div>
									<div class="bi-star-fill"></div>
									<div class="bi-star-fill"></div>
								</div>
								{{ product.PriceHT }}€
								<div class="mt-2">
									{{ product.Description }}</div>
							</div>
						</div>
						<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
							<div class="text-center">
								<a class="btn btn-outline-dark mt-auto" href="/cart/add/{{product.id}}">Ajouter au panier</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}