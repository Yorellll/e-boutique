{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block admin %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des commandes</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Numéro de commande</th>
                        <th>Valide</th>
                        <th>Date et heure</th>
                        <th>Détails</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.OrderNumber }}</td>
                            <td>{{ order.Valid ? 'Oui' : 'Non' }}</td>
                            <td>{{ order.DateTime ? order.DateTime|date('d/m/Y H:i') : '' }}</td>
                            <td><a href="{{ path('order_details', {'orderId': order.id}) }}" class="btn btn-primary btn-sm">Voir détails</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Aucune commande trouvée.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
