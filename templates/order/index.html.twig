{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>OrderNumber</th>
            <th>Valid</th>
            <th>DateTime</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.OrderNumber }}</td>
                <td>{{ order.Valid ? 'Yes' : 'No' }}</td>
                <td>{{ order.DateTime ? order.DateTime|date('Y-m-d') : '' }}</td>
                <td><a href="{{ path('order_details', {'orderId': order.id}) }}">Voir le d√©tail</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}