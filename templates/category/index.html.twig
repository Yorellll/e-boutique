{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th> <!-- Modifié le nom de la colonne pour correspondre aux actions sur les catégories -->
        </tr>
        </thead>
        <tbody>
        {% for category in categories %} <!-- Renommé la variable pour correspondre à ce qui est passé depuis le contrôleur -->
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td> <!-- Utilisation de category.name au lieu de product.Name pour correspondre aux attributs de l'entité Category -->
                <td>{{ category.description }}</td> <!-- Utilisation de category.description au lieu de product.Description pour correspondre aux attributs de l'entité Category -->
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a> <!-- Modifié le nom de la route pour correspondre à l'affichage des détails d'une catégorie -->
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a> <!-- Modifié le nom de la route pour correspondre à l'édition d'une catégorie -->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td> <!-- Modifié le colspan pour correspondre au nombre de colonnes affichées -->
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a> <!-- Modifié le nom de la route pour correspondre à la création d'une nouvelle catégorie -->
{% endblock %}